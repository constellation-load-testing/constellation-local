{
  "name": "constellation-local",
  "version": "0.1.0",
  "bin": {
    "constellation-local": "bin/constellation-local.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "bootstrap": "cd ./src/aws && cdk bootstrap && cd ../..",
    "install:orchestrator": "cd ./src/aws/lambda/orchestrator && npm install && cd ../../../..",
    "deploy:home:awsonly": "npm run bootstrap && npm run install:orchestrator && cd ./src/aws && cdk deploy \"*Home*\" && cd ../..",
    "destroy:home:awsonly": "cd ./src/aws && cdk destroy -f \"*Home*\" && cd ../..",
    "deploy:remote:awsonly": "cd ./src/aws && cdk deploy \"*Remote*\" && cd ../..",
    "destroy:remote:awsonly": "cd ./src/aws && cdk destroy -f \"*Remote*\" && cd ../..",
    "deploy:scripts": "node ./src/scripts/deployScripts.js",
    "destroy:scripts": "node ./src/scripts/destroyScripts.js",
    "deploy:home": "npm run deploy:home:awsonly && npm run deploy:scripts",
    "destroy:home": "npm run destroy:scripts && npm run destroy:home:awsonly",
    "deploy:all": "npm run deploy:home && npm run deploy:remote:awsonly",
    "destroy:all": "npm run destroy:remote:awsonly && npm run destroy:home"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "10.17.27",
    "@types/prettier": "2.6.0",
    "aws-cdk": "2.46.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "typescript": "~3.9.7"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.199.0",
    "@aws-sdk/client-s3": "^3.198.0",
    "@aws-sdk/client-timestream-query": "^3.198.0",
    "@aws-sdk/client-timestream-write": "^3.198.0",
    "aws-cdk-lib": "2.46.0",
    "aws-sdk": "^2.1242.0",
    "constructs": "^10.0.0",
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  }
}
